.SUFFIXES: .obj

TARGET=sbfetch_test.exe

HEADERS=$(wildcard *.h)
OBJECTS=log_msg.o tls_ofp_get.o
SDK=../SDK
PLUGDIR=/e/X-Plane-11/Resources/plugins/toliss_simbrief

CC=x86_64-w64-mingw32-gcc
LD=x86_64-w64-mingw32-gcc

CFLAGS+=-g0 -O2 -s -Wall -fdiagnostics-color -Wno-format-overflow -DWINDOWS -DWIN32 \
	-I$(SDK)/CHeaders/XPLM -I$(SDK)/CHeaders/Widgets -DIBM=1 \
    -DXPLM200 -DXPLM210 -DXPLM300 -DXPLM301 $(DEFINES)

CFLAGS_DLL=$(CFLAGS) -mdll

LDFLAGS=-shared -static-libgcc -static -lpthread
LIBS=-L$(SDK)/Libraries/Win -lXPLM_64 -lXPWidgets_64 -lwinhttp


all: $(TARGET)

.c.o:
	$(CC) $(CFLAGS_DLL) -c $<

sbfetch_test.exe: sbfetch_test.o $(OBJECTS)
	$(CC) $(CFLAGS) -DLOCAL_DEBUGSTRING -o sbfetch_test.exe sbfetch_test.c tls_ofp_get.c log_msg.c -lwinhttp 

win.xpl: $(OBJECTS)
	$(LD) -o $(TARGET) $(LDFLAGS) $(OBJECTS) $(LIBS)

clean:
	rm $(OBJECTS) $(TARGET)

# install the just compiled target
install: $(TARGET)
	mkdir -p "$(PLUGDIR)/64"
	cp -p $(TARGET) "$(PLUGDIR)/64"

# create the whole plugin directory
plugin: $(TARGET)
	mkdir -p "$(PLUGDIR)/64"
	cp -p $(TARGET) "$(PLUGDIR)/64"
	cp -p *.cfg *.pdf "$(PLUGDIR)"
